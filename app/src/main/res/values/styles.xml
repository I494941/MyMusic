<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="text_color">@color/black</item>
        <item name="appbg">@android:color/white</item>
        <item name="divider">@color/colorDividerGray</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="play_bar_color">@android:color/white</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Activity进出动画. -->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/act_slide_right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/act_slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/act_slide_left_out</item>
        <item name="android:activityCloseExitAnimation">@anim/act_slide_right_out</item>
    </style>


    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


